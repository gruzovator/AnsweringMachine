extends layout
block content
    h2= {en:'Question', ru:'Вопрос'}[lang]
    form(method='post', action='/qas')
        p
            label= {en:'Topic', ru:'Тема'}[lang]
            select(name='topic')
                each topic in topics || {}
                    option(value=topic)= topic
        p
            textarea(name='question' cols='40' rows='5')= question
        p
            input(type='submit', value={en:'Ask', ru:'Спросить'}[lang])
